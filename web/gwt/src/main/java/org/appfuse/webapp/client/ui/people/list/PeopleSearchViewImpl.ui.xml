<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />
<ui:with type="java.lang.Integer" field="pageSize" />


<b:Column size="10">
	<b:Heading size="2" ui:field="heading" text="People List"></b:Heading>
	
	<g:HTMLPanel>
		<form class="form-search" id="searchForm" >
		    <div class="input-append" id="search">
		        <b:TextBox ui:field="searchTerm" styleName="input-medium search-query" searchQuery="true" placeholder="{i18n.search_enterTerms}" />
		        <g:Button ui:field="searchButton" styleName="btn" >
		            <i class="icon-search"></i> <ui:text from="{i18n.button_search}" />
		        </g:Button>
		    </div>
	    </form>	
	</g:HTMLPanel>
	
	<b:FormActions>
      <b:Button ui:field="addButton" text="{i18n.button_add}" type="PRIMARY" icon="PLUS" customIconStyle="icon-white" />
      <b:Button ui:field="doneButton" text="{i18n.button_done}" icon="OK"/>
	</b:FormActions>     

	<c:SimplePager display="{table}" location="LEFT" />
    <c:CellTable pageSize="{pageSize}" ui:field="table" width="100%"/>
	<c:SimplePager display="{table}" location="LEFT" />
	
</b:Column>
</ui:UiBinder>
