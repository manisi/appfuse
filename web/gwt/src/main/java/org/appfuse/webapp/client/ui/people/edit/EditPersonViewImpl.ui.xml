<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:e="urn:import:com.google.gwt.editor.ui.client"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />


<g:HTMLPanel>
	<b:Column size="2">
		<b:Heading size="2"  ui:field="heading" text="Person" />
		<b:Paragraph ui:field="subheading">Edit Person Details</b:Paragraph>
	</b:Column>
     
	<b:Column size="7">
		<b:Form type="HORIZONTAL" styleName="well form-horizontal">
		
		    <b:LongBox ui:field="id" visible="false" />
		    <b:IntegerBox ui:field="version" visible="false" />
		
			<b:ControlGroup ui:field="firstNameControlGroup">
		        <b:ControlLabel for="firstName"><ui:text from="{i18n.user_firstName}" /> <span class="required">*</span></b:ControlLabel>
		       	<b:Controls>
		       		<b:TextBox ui:field="firstName" controlGroup="{firstNameControlGroup}" errorLabel="{firstNameErrors}" />
		       		<b:HelpInline ui:field="firstNameErrors" />
		       	</b:Controls>
		    </b:ControlGroup>
			<b:ControlGroup ui:field="lastNameControlGroup">
		        <b:ControlLabel for="lastName"><ui:text from="{i18n.user_lastName}" /> <span class="required">*</span></b:ControlLabel>
		       	<b:Controls>
		       		<b:TextBox ui:field="lastName" controlGroup="{lastNameControlGroup}" errorLabel="{lastNameErrors}" />
		       		<b:HelpInline ui:field="lastNameErrors" />
		       	</b:Controls>
		    </b:ControlGroup>
		
			<b:FormActions>
				<b:Button ui:field="saveButton" styleName="btn btn-primary" customIconStyle="icon-ok icon-white" text="{i18n.button_save}" />
				<b:Button ui:field="deleteButton" styleName="btn" customIconStyle="icon-trash" text="{i18n.button_delete}" />
				<b:Button ui:field="cancelButton" styleName="btn" customIconStyle="icon-remove" text="{i18n.button_cancel}" />
			</b:FormActions>
		
		</b:Form>
	</b:Column>
</g:HTMLPanel>
</ui:UiBinder>
